import pandas as pd
import matplotlib.pyplot as plt
import seaborn as sns

# Load dataset
data = pd.read_csv("../data/students.csv")

# Display data
print("Dataset:")
display(data)

# Summary statistics
print("\nSummary Statistics:")
display(data.describe())

# Correlation matrix
corr = data[['marks', 'attendance', 'logins']].corr()

# Heatmap
plt.figure()
sns.heatmap(corr, annot=True, cmap="Blues")
plt.title("Correlation Heatmap")
plt.savefig("../outputs/correlation_heatmap.png")
plt.show()

# Identify at-risk students
at_risk = data[(data['marks'] < 50) | (data['attendance'] < 65)]
print("\nAt-Risk Students:")
display(at_risk)

# Bar chart: Marks by student
plt.figure()
plt.bar(data['student_id'], data['marks'])
plt.xlabel("Student ID")
plt.ylabel("Marks")
plt.title("Student Performance (Marks)")
plt.savefig("../outputs/performance_bar_chart.png")
plt.show()
